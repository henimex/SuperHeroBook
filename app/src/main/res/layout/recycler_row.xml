    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="MARVEL"
        android:textAlignment="textEnd"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
